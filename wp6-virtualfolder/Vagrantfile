# -*- mode: ruby -*-
# vi: set ft=ruby :
# changes:
# - tomas 11/07/2016 new dev branch for lubuntu desktop (16.04) LTS - 3 years support
# - tomas 15/06/2016 chagned to xenial (ubuntu 16.04).
# - tomas 20/05/2016 changed from precise64 (ubuntu 12.04) to trusty64 (ubuntu 14.04) - newer version of packages,
# - tomas 19/07/2016 changed to lubuntu 16.04 and insert_key false to prevent second vagrant up fail
#                    added start.sh provision to run always - starts background processes
# - tomas 02/08/2016 changed to ubuntu 16.04 - desktop is installed with bootstrapdesktop.sh

Vagrant.configure(2) do |config|
  config.vm.box = "boxcutter/ubuntu1604"
  config.vm.network "forwarded_port", guest: 80, host: 8080
  config.vm.network "forwarded_port", guest: 8000, host: 8000
  if Vagrant.has_plugin?("vagrant-proxyconf")
    config.proxy.http     = "http://wwwcache.dl.ac.uk:8080"
    config.proxy.https    = "https://wwwcache.dl.ac.uk:8080"
    config.proxy.no_proxy = "localhost,127.0.0.1"
  end
  config.vm.provider "virtualbox" do |vb|
  #   # Display the VirtualBox GUI when booting the machine
     vb.gui = true
  #
  #   # Customize the amount of memory on the VM:
    vb.memory = "2048"
    vb.cpus = "2"
    #vb.vram = "16"
    vb.customize ["modifyvm", :id, "--vram", "16"]
    # vb.name = "wp6-virtualfolder-ubuntu16.04"
  end
  config.vm.synced_folder ".", "/vagrant"
  config.vm.provision "shell",  path: "bootstrap.sh"
  #config.ssh.username = "vagrant"
  #config.ssh.insert_key = false
  #config.ssh.password = "vagrant"
end
